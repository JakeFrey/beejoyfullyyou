<div class='app-container'>
    {{#if mobileScreen}}
        <div class='side-nav-menu {{if showNavMenu 'show'}}'>
            <i class='material-icons close-menu-button' {{action (toggle 'showNavMenu' this)}}>clear</i>
            <ul class='menu-options'>
                <li {{action 'linkClicked' 'index'}}>Home</li>
                <li {{action 'linkClicked' 'catalog'}}>Products</li>
                <li {{action 'linkClicked' 'about'}}>About</li>
                <li {{action 'linkClicked' 'contact'}}>Contact</li>
                <li {{action 'linkClicked' 'give'}}>Gift cards</li>
            </ul>
        </div>
    {{/if}}

    <div class='app-overlay {{if showNavMenu 'active'}}' {{action (toggle 'showNavMenu' this)}}></div>

    <div class='header'>
        <div class='content {{if mobileScreen 'mobile'}}'>
            {{#if mobileScreen}}
                <div>
                    <i class='material-icons nav-menu-button' {{action (toggle 'showNavMenu' this)}}>menu</i>
                </div>
                {{#link-to 'index' class='home-link mobile'}}
                    <img src='/assets/logos/logo-in-circle.png' height=80px/>
                {{/link-to}}
                <ul class='social-media-links'>
                    <a target='_blank' href='https://www.instagram.com/beejoyfullyyou/'>
                        <img src='/assets/icons/ig-logo.png'/>
                    </a>
                </ul>
            {{else}}
                {{#link-to 'index' class='home-link'}}
                    <img src='/assets/logos/logo-text-right.png'/>
                {{/link-to}}
                <ul class='menu-options'>
                    {{link-to 'Home' 'index'}}
                    {{link-to 'Products' 'catalog'}}
                    {{link-to 'About' 'about'}}
                    {{link-to 'Contact' 'contact'}}
                    {{link-to 'Gift cards' 'give'}}
                </ul>
                <ul class='social-media-links'>
                    <a target='_blank' href='https://www.instagram.com/beejoyfullyyou/'>
                        <img src='/assets/icons/ig-logo.png'/>
                    </a>
                    <!-- <a target='_blank' href='https://www.facebook.com/janelle.quijano.3'> -->
                    <!--     <img src='/assets/icons/fb-logo.png'/> -->
                    <!-- </a> -->
                </ul>
            {{/if}}
        </div>
    </div>
    <main class={{mainClassName}}>
        {{outlet}}
    </main>
    <div class='footer'>
        <div class='content'>
            <div>SeneGence Independent Distributor #657565</div>
            <div>&copy;2019 Bee Joyfully You</div>
            <div>Website by Jacob Frey - best husband ever</div>
        </div>
    </div>
</div>
